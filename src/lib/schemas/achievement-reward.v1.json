{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://renaissance.app/schemas/achievement-rewards.v1.json",
    "title": "AchievementRewardsV1",
    "type": "array",
    "minItems": 1,
    "items": { "$ref": "#/$defs/Reward" },
    "$defs": {
        "Reward": {
            "oneOf": [
                { "$ref": "#/$defs/RenownReward" },
                { "$ref": "#/$defs/RenownByDifficultyReward" },
                { "$ref": "#/$defs/BadgeReward" },
                { "$ref": "#/$defs/TitleReward" }
            ]
        },

        "RenownReward": {
            "type": "object",
            "additionalProperties": false,
            "required": ["type", "value"],
            "properties": {
                "type": { "const": "renown" },
                "value": { "type": "integer", "minimum": 1 }
            }
        },

        "RenownByDifficultyReward": {
            "type": "object",
            "additionalProperties": false,
            "required": ["type", "map"],
            "properties": {
                "type": { "const": "renown_by_difficulty" },
                "map": { "$ref": "#/$defs/DifficultyMap" }
            }
        },

        "DifficultyMap": {
            "type": "object",
            "additionalProperties": false,
            "required": ["default"],
            "properties": {
                "default": { "type": "integer", "minimum": 1 },
                "0": { "type": "integer", "minimum": 1 },
                "1": { "type": "integer", "minimum": 1 },
                "2": { "type": "integer", "minimum": 1 },
                "3": { "type": "integer", "minimum": 1 },
                "4": { "type": "integer", "minimum": 1 },
                "5": { "type": "integer", "minimum": 1 }
            }
        },

        "BadgeReward": {
            "type": "object",
            "additionalProperties": false,
            "required": ["type", "code"],
            "properties": {
                "type": { "const": "badge" },
                "code": {
                    "type": "string",
                    "minLength": 1,
                    "pattern": "^[a-z0-9_\\-]+$"
                }
            }
        },

        "TitleReward": {
            "type": "object",
            "additionalProperties": false,
            "required": ["type", "code"],
            "properties": {
                "type": { "const": "title" },
                "code": {
                    "type": "string",
                    "minLength": 1,
                    "pattern": "^[a-z0-9_\\-]+$"
                }
            }
        }
    }
}
